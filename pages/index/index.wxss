.c-todayPage {
  background-color: #fff;
}

.c-todayPage__waveCanvas {
  position: absolute;
  bottom: 0;
  width: 100%;
}

.c-todayPage__actionCanvas {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 100px;
  width: 80px;
  height: 30px;
}

.c-todayPage__addBtn {
  position: absolute;
  display: inline-block;
  width: 100px;
  height: 40px;
  bottom: 20%;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 20px;
  background-color: #f7fcff;
  text-align: center;
  line-height: 40px;
  box-shadow: 0 2px 8px rgba(0,0,0,.2);
}

.c-todayPage__date {
  position: absolute;
  display: block;
  width: 100%;
  top: 14%;
  text-align: center;
  color: #9ca5ae;
  opacity: .8;
  font-size: 16px;
  font-weight: bold;
}

.c-todayPage__noData {
  position: absolute;
  display: block;
  width: 100%;
  top: 22%;
  text-align: center;
  color: #9ca5ae;
  font-size: 24px;
}

.c-todayPage__temperature {
  position: absolute;
  display: block;
  width: 100%;
  top: 16%;
  /*color: #4ea9fc;*/
  color: #ee4e5b;
  font-size: 100px;
  font-weight: bold;
  text-align: center;
  letter-spacing: -10px;
}

.c-todayPage__unit {
  font-weight: normal;
  font-size: 60px;
}

.c-todayPage__periodTips {
  position: absolute;
  display: block;
  width: 100%;
  top: 40%;
  text-align: center;
  color: #f8b3b8;/**#ee4e5b**/
}

.c-iconList {
  position: absolute;
  top: 10px;
  right: 20px;
  display: inline-block;
  width: 24px;
  height: 24px;
}
.c-iconList__line:nth-child(1) {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 4px;
  border-radius: 2px;  
  background-color: rgba(0,0,0,.6);
}
.c-iconList__line:nth-child(2) {
  position: absolute;
  top: 8px;
  left: 0;
  width: 100%;
  height: 4px;
  border-radius: 2px;  
  background-color: rgba(0,0,0,.6);
}
.c-iconList__line:nth-child(3) {
  position: absolute;
  top: 16px;
  left: 0;
  width: 100%;
  height: 4px;
  border-radius: 2px;
  background-color: rgba(0,0,0,.6);
}
