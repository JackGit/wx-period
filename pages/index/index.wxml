<view class="c-todayPage">
  <view class="c-iconList" bindtap="tapListIcon">
    <view class="c-iconList__line"></view>
    <view class="c-iconList__line"></view>
    <view class="c-iconList__line"></view>
  </view>
  <text class="c-todayPage__date">Jan 24, 2017</text>
  <view wx:if="{{todayData.temperature}}" class="c-todayPage__temperature">
    {{todayData.temperature}}<text class="c-todayPage__unit">°C</text>
  </view>
  <text wx:else class="c-todayPage__noData">无数据</text>
  <text wx:if="{{todayData.inPeriod}}" class="c-todayPage__periodTips">第{{todayData.daysPeriodLasts}}天</text>
  <!--<view class="c-todayPage__addBtn">添加</view>-->
  <canvas canvas-id="waveCanvas" class="c-todayPage__waveCanvas" style="height:{{canvasHeight}}px"/>
  <canvas canvas-id="actionCanvas" class="c-todayPage__actionCanvas" bindtouchstart="tapCanvas"/>
</view>